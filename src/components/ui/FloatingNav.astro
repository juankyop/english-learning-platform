---
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
const isDocumentation = currentPath.includes('/documentation');
const isExercises = currentPath.includes('/exercises');
---

<div class="fixed top-8 left-1/2 -translate-x-1/2 z-50">
  <div class="bg-white/90 backdrop-blur-lg rounded-full shadow-lg border border-gray-100 p-2">
    <div class="flex items-center gap-3">
      <a 
        href="/" 
        class:list={[
          "rounded-full hover:bg-gray-100",
          isHome ? "flex items-center gap-2 px-3 py-2" : "p-2"
        ]}
        title="Inicio"
      >
        <svg 
          class="w-5 h-5 text-gray-700" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
          transition:name="home-icon"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        {isHome && <span class="text-sm font-medium text-gray-700">Inicio</span>}
      </a>

      <div class="w-px h-5 bg-gray-200"></div>

      <a 
        href="/documentation" 
        class:list={[
          "rounded-full",
          isDocumentation ? "bg-primary/10 text-primary" : "hover:bg-gray-100 text-gray-700",
          isHome ? "flex items-center gap-2 px-3 py-2" : "p-2"
        ]}
        title="Teoría"
      >
        <svg 
          class="w-5 h-5" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
          transition:name="docs-icon"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        {isHome && <span class="text-sm font-medium">Teoría</span>}
      </a>

      <a 
        href="/exercises" 
        class:list={[
          "rounded-full",
          isExercises ? "bg-primary/10 text-primary" : "hover:bg-gray-100 text-gray-700",
          isHome ? "flex items-center gap-2 px-3 py-2" : "p-2"
        ]}
        title="Práctica"
      >
        <svg 
          class="w-5 h-5" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
          transition:name="exercises-icon"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
        {isHome && <span class="text-sm font-medium">Práctica</span>}
      </a>

      <div class="w-px h-5 bg-gray-200"></div>

      <a 
        href="/login" 
        class:list={[
          "rounded-full bg-primary text-white hover:bg-primary/90",
          isHome ? "flex items-center gap-2 px-3 py-2" : "p-2"
        ]}
        title="Iniciar sesión"
      >
        <svg 
          class="w-5 h-5" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
          transition:name="login-icon"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
        </svg>
        {isHome && <span class="text-sm font-medium">Iniciar sesión</span>}
      </a>
    </div>
  </div>
</div>

