---
import type { ExamLevel } from '../../types/exercises';

interface Props {
  href: string;
  title: string;
  level: ExamLevel;
  description: string;
}

const { href, title, level, description } = Astro.props;

const levelColors = {
  'A2': 'bg-green-100 text-green-800',
  'B1': 'bg-blue-100 text-blue-800',
  'B2': 'bg-purple-100 text-purple-800',
  'C1': 'bg-orange-100 text-orange-800',
  'C2': 'bg-red-100 text-red-800'
} as const;
---

<a 
  href={href}
  class="block bg-white rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all p-6"
>
  <div class="flex justify-between items-start mb-4">
    <h3 class="font-semibold text-lg">{title}</h3>
    <span class={`inline-block px-2 py-1 rounded text-sm font-medium ${levelColors[level]}`}>
      {level}
    </span>
  </div>
  <p class="text-gray-600">{description}</p>
</a> 