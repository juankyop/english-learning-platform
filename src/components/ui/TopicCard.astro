---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
  completed?: boolean;
}

const { title, description, href, icon, completed = false } = Astro.props;
---

<a href={href} class="block group">
  <div class="bg-white depth-card rounded-[2rem] p-8 h-full">
    <div class="flex flex-col h-full">
      <!-- Header -->
      <div class="flex items-start justify-between mb-6">
        {icon && (
          <div class="w-12 h-12 floating-icon">
            <img src={icon} alt="" class="w-full h-full" />
          </div>
        )}
        {completed && (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            Completado
          </span>
        )}
      </div>

      <!-- Content -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2 card-title">
          {title}
        </h3>
        <p class="text-gray-600 mb-4">
          {description}
        </p>
      </div>

      <!-- Footer -->
      <div class="mt-auto">
        <span class="inline-flex items-center text-primary font-medium">
          Comenzar
          <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      </div>
    </div>
  </div>
</a> 