---
interface Props {
  stats: {
    exercisesCompleted: number;
    accuracy: number;
    topicsMastered: number;
    practiceTime: number;
  }
}

const { stats } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8 sticky top-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-8">Tu progreso</h2>
  <div class="space-y-8">
    <div>
      <div class="text-3xl font-bold text-primary mb-2">{stats.exercisesCompleted}</div>
      <div class="text-sm text-gray-600">Ejercicios completados</div>
    </div>
    <div>
      <div class="text-3xl font-bold text-primary mb-2">{stats.accuracy}%</div>
      <div class="text-sm text-gray-600">Precisión media</div>
    </div>
    <div>
      <div class="text-3xl font-bold text-primary mb-2">{stats.topicsMastered}</div>
      <div class="text-sm text-gray-600">Temas dominados</div>
    </div>
    <div>
      <div class="text-3xl font-bold text-primary mb-2">{stats.practiceTime}h</div>
      <div class="text-sm text-gray-600">Tiempo de práctica</div>
    </div>
  </div>
</div> 