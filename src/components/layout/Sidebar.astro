---
import { Icon } from 'astro-icon';

interface Props {
  mode?: 'default' | 'docs';
}

const { mode = 'default' } = Astro.props;

const navigation = {
  docs: [
    {
      title: 'Teoría',
      items: [
        { name: 'Gramática', href: '/documentation/grammar', icon: 'description' },
        { name: 'Vocabulario', href: '/documentation/vocabulary', icon: 'translate' },
        { name: 'Pronunciación', href: '/documentation/pronunciation', icon: 'record_voice_over' },
        { name: 'Expresiones', href: '/documentation/expressions', icon: 'chat_bubble' }
      ]
    }
  ]
};
---

{mode === 'docs' && (
  <aside 
    id="sidebar" 
    class="fixed inset-y-0 left-0 z-40 w-64 bg-white border-r border-gray-200 hidden md:block"
  >
    <div class="h-full px-3 py-4 overflow-y-auto">
      <nav class="space-y-6">
        {navigation.docs.map(section => (
          <div class="mb-6">
            <h3 class="px-3 mb-3 text-sm font-semibold text-gray-500">
              {section.title}
            </h3>
            <ul>
              {section.items.map(item => (
                <li>
                  <a
                    href={item.href}
                    class="flex items-center px-3 py-2 text-gray-700 rounded-lg hover:bg-gray-100"
                  >
                    <span class="material-icons text-gray-500 mr-3">{item.icon}</span>
                    <span>{item.name}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </nav>
    </div>
  </aside>
)} 