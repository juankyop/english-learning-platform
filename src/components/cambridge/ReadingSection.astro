---
import type { ReadingPart } from '../../types/cambridge';

interface Props {
  section: ReadingPart;
}

const { section } = Astro.props;
---

<div class="space-y-6">
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <h4 class="text-lg font-semibold text-gray-800 mb-3">Tipos de texto</h4>
      <ul class="space-y-2">
        {section.textType.map(type => (
          <li class="flex items-center text-gray-600">
            <svg class="w-4 h-4 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            {type}
          </li>
        ))}
      </ul>
    </div>
    
    <div>
      <h4 class="text-lg font-semibold text-gray-800 mb-3">Tipos de preguntas</h4>
      <ul class="space-y-2">
        {section.questionTypes.map(type => (
          <li class="flex items-center text-gray-600">
            <svg class="w-4 h-4 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            {type}
          </li>
        ))}
      </ul>
    </div>
  </div>

  <div>
    <h4 class="text-lg font-semibold text-gray-800 mb-3">Habilidades evaluadas</h4>
    <div class="flex flex-wrap gap-2">
      {section.skills.map(skill => (
        <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
          {skill}
        </span>
      ))}
    </div>
  </div>

  <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
    <div>
      <p class="text-sm text-blue-600 font-medium">Extensión del texto</p>
      <p class="text-2xl font-bold text-blue-700">{section.wordCount} palabras</p>
    </div>
    <div>
      <p class="text-sm text-blue-600 font-medium">Número de preguntas</p>
      <p class="text-2xl font-bold text-blue-700">{section.totalQuestions}</p>
    </div>
  </div>
</div> 