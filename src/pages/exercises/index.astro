---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TopicCard from '../../components/ui/TopicCard.astro';

const exerciseTopics = [
  {
    id: 'present-simple',
    title: 'Present Simple Exercises',
    level: 'A1',
    description: 'Practice using the present simple tense with various exercises',
  },
  {
    id: 'past-simple',
    title: 'Past Simple Exercises',
    level: 'A1',
    description: 'Test your knowledge of the past simple tense',
  },
  {
    id: 'present-perfect',
    title: 'Present Perfect Exercises',
    level: 'B1',
    description: 'Practice using present perfect in different contexts',
  }
];
---

<BaseLayout title="Ejercicios - English Learning">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">Ejercicios por tema</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {exerciseTopics.map(topic => (
        <TopicCard
          href={`/exercises/${topic.id}`}
          title={topic.title}
          level={topic.level}
          description={topic.description}
        />
      ))}
    </div>
  </div>
</BaseLayout> 