---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TopicCard from '../../components/ui/TopicCard.astro';

const topics = [
  {
    id: 'present-simple',
    title: 'Present Simple',
    level: 'A1',
    description: 'Learn how to talk about habits and general truths',
  },
  {
    id: 'past-simple',
    title: 'Past Simple',
    level: 'A1',
    description: 'Express completed actions in the past',
  },
  // Más temas...
];
---

<BaseLayout title="Documentación - English Learning">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold mb-8">Temas gramaticales</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {topics.map(topic => (
        <TopicCard
          href={`/documentation/${topic.id}`}
          title={topic.title}
          level={topic.level}
          description={topic.description}
        />
      ))}
    </div>
  </div>
</BaseLayout> 