---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { WritingModel } from '../../types/content';

export function getStaticPaths() {
  return [
    { params: { modelType: 'formal-letter' } },
    { params: { modelType: 'informal-letter' } },
    { params: { modelType: 'essay' } },
    { params: { modelType: 'email' } },
    { params: { modelType: 'report' } }
  ];
}

const { modelType } = Astro.params;

const writingModel: WritingModel = {
  id: modelType,
  type: modelType as WritingModel['type'],
  title: 'Formal Letter',
  description: 'Learn how to write a formal letter for business or official purposes',
  structure: {
    sections: [
      'Sender\'s address',
      'Date',
      'Recipient\'s address',
      'Formal greeting',
      'Introduction paragraph',
      'Main body paragraphs',
      'Closing paragraph',
      'Formal closing',
      'Signature'
    ],
    examples: [
      'Dear Sir/Madam,',
      'I am writing to inquire about...',
      'Yours faithfully,'
    ]
  },
  tips: [
    'Use formal language throughout',
    'Avoid contractions (write "do not" instead of "don\'t")',
    'Keep paragraphs focused and concise',
    'Use proper salutations and closings'
  ]
};
---

<BaseLayout title={`${writingModel.title} - Writing Model`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <a href="/writing" class="text-blue-600 hover:text-blue-800">
        ‚Üê Volver a modelos de writing
      </a>
      <h1 class="text-3xl font-bold mt-4">{writingModel.title}</h1>
    </div>

    <div class="prose max-w-none">
      <p class="text-lg text-gray-600">{writingModel.description}</p>

      <h2>Estructura</h2>
      <ul>
        {writingModel.structure.sections.map(section => (
          <li>{section}</li>
        ))}
      </ul>

      <h2>Ejemplos</h2>
      <ul>
        {writingModel.structure.examples.map(example => (
          <li>{example}</li>
        ))}
      </ul>

      <h2>Consejos</h2>
      <ul>
        {writingModel.tips.map(tip => (
          <li>{tip}</li>
        ))}
      </ul>
    </div>
  </div>
</BaseLayout> 