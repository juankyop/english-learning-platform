---
import FloatingNav from '../components/ui/FloatingNav.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | English Learning Platform</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <ViewTransitions />
  </head>
  <body class="bg-[#F8F9FF] font-inter">
    <FloatingNav />
    <div class="flex min-h-screen">
      <main class="flex-1 px-4 py-6 transition-all duration-300 md:px-8">
        <div class="max-w-7xl mx-auto">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #4B4ACF;
    --secondary-color: #FF6B6B;
  }

  body {
    font-family: 'Inter', sans-serif;
  }

  .glass-effect {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Animaciones para las transiciones de página */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Animación para la salida de la página */
  ::view-transition-old(root) {
    opacity: 1;
  }

  /* Animación para la entrada de la página */
  ::view-transition-new(root) {
    opacity: 0;
  }

  /* Estado activo de la transición */
  :root::view-transition-container(root) {
    opacity: 1;
  }

  /* Animación personalizada para las cards */
  @keyframes slide-up {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
</style> 